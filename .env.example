# Terrano Express - Variables d'Environnement

# =================================
# Base Configuration
# =================================
NEXT_PUBLIC_APP_NAME="Terrano Express"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =================================
# Database (Optionnel - pour production)
# =================================
# DATABASE_URL="postgresql://username:password@localhost:5432/terrano_express"
# REDIS_URL="redis://localhost:6379"

# =================================
# Authentication (Optionnel - pour production)
# =================================
# NEXTAUTH_SECRET="your-secret-key-here"
# NEXTAUTH_URL="http://localhost:3000"

# =================================
# Mobile Money APIs (Optionnel - pour production)
# =================================
# Orange Money
# ORANGE_MONEY_API_KEY="your-orange-money-api-key"
# ORANGE_MONEY_API_SECRET="your-orange-money-api-secret"
# ORANGE_MONEY_SANDBOX="true"

# MTN Mobile Money
# MTN_MOMO_API_KEY="your-mtn-momo-api-key"
# MTN_MOMO_API_SECRET="your-mtn-momo-api-secret"
# MTN_MOMO_SANDBOX="true"

# Moov Money
# MOOV_MONEY_API_KEY="your-moov-money-api-key"
# MOOV_MONEY_API_SECRET="your-moov-money-api-secret"
# MOOV_MONEY_SANDBOX="true"

# =================================
# Push Notifications (Optionnel)
# =================================
# VAPID_PUBLIC_KEY="your-vapid-public-key"
# VAPID_PRIVATE_KEY="your-vapid-private-key"
# VAPID_EMAIL="contact@terrano-express.com"

# =================================
# Maps & Geolocation (Optionnel)
# =================================
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
# NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# =================================
# Email Service (Optionnel)
# =================================
# RESEND_API_KEY="your-resend-api-key"
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@example.com"
# SMTP_PASS="your-email-password"

# =================================
# SMS Service (Optionnel)
# =================================
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# =================================
# Analytics (Optionnel)
# =================================
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
# NEXT_PUBLIC_HOTJAR_ID="your-hotjar-id"

# =================================
# Storage (Optionnel - pour images)
# =================================
# CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
# CLOUDINARY_API_KEY="your-cloudinary-api-key"
# CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =================================
# Development
# =================================
NODE_ENV="development"
NEXT_PUBLIC_DEV_MODE="true"
